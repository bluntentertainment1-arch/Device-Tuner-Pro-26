<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CleanerGuru.Splash" parent="Theme.SplashScreen">

        <!-- Match app background to make splash invisible -->
        <item name="windowSplashScreenBackground">@color/app_background</item>

        <!-- REMOVE animated icon -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>

        <!-- REMOVE animation delay -->
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Go straight to your app theme -->
        <item name="postSplashScreenTheme">@style/Theme.CleanerGuru</item>

    </style>

</resources>
