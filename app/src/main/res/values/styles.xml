<style name="Theme.CleanerGuru.Splash" parent="Theme.SplashScreen">

    <!-- MUST MATCH YOUR GLOW BASE COLOR -->
    <item name="windowSplashScreenBackground">#000000</item>
    <!-- or whatever base color your glow sits on -->

    <!-- Remove icon so nothing flashes -->
    <item name="windowSplashScreenAnimatedIcon">@null</item>

    <!-- No delay -->
    <item name="windowSplashScreenAnimationDuration">0</item>

    <!-- Important -->
    <item name="postSplashScreenTheme">@style/Theme.CleanerGuru</item>

</style>
